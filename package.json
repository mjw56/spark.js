{
  "name": "@jaredpalmer/after",
  "private": false,
  "version": "1.3.1",
  "description": "Build isomorphic Javascript applications with ease.",
  "repository": "jaredpalmer/after.js",
  "author": "Jared Palmer <jared@palmer.net>",
  "license": "MIT",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build",
    "after.js",
    "document.js",
    "asyncComponent.js",
    "ensureReady.js",
    "render.js",
    "loadInitialProps.js"
  ],
  "scripts": {
    "prepare": "tsc -p tsconfig.build.json && npm run compile-inferno",
    "start": "tsc -p tsconfig.build.json -w",
    "format": "prettier --trailing-comma es5 --single-quote --write 'packages/*/*.js' 'packages/*/!(node_modules)/**/*.js'",
    "compile-inferno": "babel build/*.jsx -d .",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --trailing-comma es5 --single-quote --write",
      "git add"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/coverage/",
      "<rootDir>/node_modules/",
      "<rootDir>/examples/"
    ],
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/packages/*/node_modules/",
      "<rootDir>/examples/",
      "<rootDir>/coverage/"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/history": "^4.6.2",
    "@types/node": "^9.4.2",
    "@types/serialize-javascript": "^1.3.2",
    "babel-cli": "^6.26.0",
    "babel-plugin-inferno": "^5.0.1",
    "babel-preset-env": "^1.7.0",
    "express": "^4.16.2",
    "husky": "^0.14.3",
    "jest": "^22.2.1",
    "lint-staged": "^6.1.0",
    "ts-jest": "^22.0.3",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.7.0",
    "tslint-react": "^3.4.0",
    "typescript": "^2.8.1"
  },
  "dependencies": {
    "inferno": "^5.0.5",
    "inferno-create-element": "^5.0.5",
    "inferno-router": "^5.0.5",
    "inferno-server": "^5.0.5",
    "react-router-dom": "^4.2.2",
    "serialize-javascript": "^1.5.0"
  }
}
